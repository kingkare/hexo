.TreasurePavilion
  h2
    margin-bottom: 0
  h3.TreasurePavilion-subtitle
    margin: 20px 0 10px
    font-size: 1.3rem
    color: var(--text-color)
    border-left: 4px solid var(--theme-color)
    padding-left: 10px
  .TreasurePavilion-desc
    margin-bottom: 10px
  .TreasurePavilion-list
    display: flex
    gap: 18px
    flex-wrap: wrap
    a.TreasurePavilion_box
      color: white
      text-decoration: none 
    .TreasurePavilion_box
      --w: calc(100% / 6 - 15px) 
      width: var(--w) 
      display: flex 
      justify-content: space-between 
      flex-direction: column 
      background-position: center 
      background-size: cover !important
      border-radius: 12px !important
      position: relative 
      overflow: hidden 
      padding: 10px 
      color: #fff 
      transition: .5s 
      &::after
        content: ''
        position: absolute
        height: 100%
        width: 100%
        left: 0
        top: 0
        background: rgba(0,0,0,0.3)
        z-index: 0
        transition: .5s
      &:hover
        transform: translateY(-10px)
        &::after
          background: rgba(0,0,0,0.1)
      .TreasurePavilion_top
        display: flex
        z-index: 1
        align-items: center
        justify-content: space-between
        color: #ffffff;   // 类型名颜色
      .TreasurePavilion_content
        z-index: 1
        margin-top: 86%
        span
          display: block
          font-size: 18px
          font-weight: bold
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          color: #ffffff;   // 书籍名颜色
 
[data-theme='dark']
  .TreasurePavilion
    h3.TreasurePavilion-subtitle
      color: #ffffff
  .TreasurePavilion .TreasurePavilion-list .TreasurePavilion_box
    color: rgb(255, 255, 255)!important
    &:hover
      transform: translateY(-10px)
      &::after
        background: rgba(0,0,0,0.2)
    &::after
      background: rgba(0,0,0,0.5)
.TreasurePavilion .TreasurePavilion-list
  @media screen and (max-width: 1100px)
    gap: 15px
    .TreasurePavilion_box
      --w: calc(20% - 12px)
  @media screen and (max-width: 900px)
    gap: 16px
    .TreasurePavilion_box
      --w: calc(25% - 12px)
  @media screen and (max-width: 768px)
    gap: 15px
    .TreasurePavilion_box
      --w: calc(100% / 3 - 10px)
  @media screen and (max-width: 500px)
    gap: 16px
    .TreasurePavilion_box
      --w: calc(50% - 8px)
a.TreasurePavilion_box{
  border-bottom:none !important
}